<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/popupdetail_background">

    <RelativeLayout
        android:id="@+id/appBar_myChallenge"
        android:layout_width="match_parent"

        android:layout_height="64dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembelian"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/detail_coin"
        android:layout_width="333dp"
        android:layout_height="252dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/appBar_myChallenge"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Coins"
            android:gravity="center"
            android:drawableLeft="@drawable/coin_icon_pembelian"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerHorizontal="true"
            android:drawablePadding="15dp"
            android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/point"
                android:layout_below="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240 Point"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/point_icon"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:drawablePadding="15dp"/>
            <Button
                android:id="@+id/redeem"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_below="@id/point"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_blue"
                android:text="Tukar Poin"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:id="@+id/buy1"
    android:layout_width="333dp"
    android:layout_height="80dp"
    android:layout_below="@id/detail_coin"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="20dp"
    android:layout_centerHorizontal="true">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_object"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:drawablePadding="15dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_coins_small"
            android:fontFamily="@font/montserrat"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:text="33 Coins"
            android:textColor="@android:color/black"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/button_gold"
            android:text="Rp5.000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/buy2"
        android:layout_width="333dp"
        android:layout_height="80dp"
        android:layout_below="@id/buy1"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_object2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_coins_small"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:text="100 Coins"
                android:textColor="@android:color/black"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_gold"
                android:text="Rp15.000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buy3"
        android:layout_width="333dp"
        android:layout_height="80dp"
        android:layout_below="@id/buy2"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_object3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:drawablePadding="15dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_coins_small"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:text="194 Coins"
                android:textColor="@android:color/black"/>

            <Button

                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/button_gold"
                android:text="Rp29.000"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>