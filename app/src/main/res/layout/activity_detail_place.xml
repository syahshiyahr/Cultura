<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPlaceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer_detail"
        >

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_place_background"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/image_content"
                android:layout_width="324dp"
                android:layout_height="247dp"
                app:cardCornerRadius="28dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp">

            <ImageView
                android:layout_width="324dp"
                android:layout_height="247dp"
                android:background="@drawable/candi_singosari"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/desc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_content"
                android:text="@string/desc_place"
                android:justificationMode="inter_word"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@android:color/black"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/place_detail"
                android:layout_below="@+id/desc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Tunggul Ametung No.4, Candirenggo, Kec. Singosari, Malang, Jawa Timur 65153"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/time_detail"
                android:layout_below="@+id/place_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buka
\nTutup Pukul : 17.00"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_detail"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_star_black_24dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_star_black_24dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_star_black_24dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_star_black_24dp"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_star_black_24dp"

                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/5"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:fontFamily="@font/montserrat"
                    android:text="Lihat ulasan >"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/appbar_background">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_keyboard_backspace_white_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candi Singosari"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/footer_blue"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/numOfObject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 Objects"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="26dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/object"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/numOfObject"
            android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp">

            <RelativeLayout
                android:id="@+id/icon_image"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/icon_detail">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/arca"
                        android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_image"
                android:text="Arca"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"/>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp">

                <RelativeLayout
                    android:id="@+id/icon_image2"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/icon_detail">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/keris"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_image2"
                    android:text="Keris"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/icon_image3"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/icon_detail">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/patung"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_image3"
                    android:text="Patung"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="12sp"/>
            </RelativeLayout>




        </LinearLayout>
        <Button
            android:id="@+id/takeChallengeDetail"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/object"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_gold"
            android:text="Terima Tantangan"
            android:textAllCaps="false"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:textColor="@android:color/white"/>




    </RelativeLayout>







</RelativeLayout>