<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_myChallenge"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="33dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="10dp"

    >

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_challenge_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tv_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:textSize="10sp"
            tools:text="0/3"
            android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"
                tools:text="8j 45m tersisa"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/tv_nameOfPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="14sp"
                tools:text="Candi Singosari"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Malang"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_place_white_24dp"
                android:drawablePadding="5dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/montserrat"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="16dp"/>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/img_item_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@color/colorAccent" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>