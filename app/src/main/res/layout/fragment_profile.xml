<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/register_background"
    >

    <ImageView
        android:id="@+id/foto_profil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/foto_profil"/>

    <Button
        android:id="@+id/btn_add_event"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/foto_profil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_gold"
        android:elevation="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Edit Profil"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/name_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Nama"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/btn_add_event"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/email_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Syahshiyah Rohidah"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/white"
        android:layout_below="@id/name_profile"/>


    <TextView
        android:id="@+id/edt_profil"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/line5"
        android:layout_alignRight="@id/Password"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/ic_edit_white_24dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/email_profile"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Username"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/line2"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvUsername"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="sasirhd"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/username"/>

    <View
        android:id="@+id/line3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tvUsername"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:textColor="@android:color/white"
        android:text="Email"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/line3"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="syahshiyahr@gmail.com"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/email"/>

    <View
        android:id="@+id/line4"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tvEmail"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/nomerTelepon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="No. Telepon"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/line4"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvNoTelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="08123456239"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/nomerTelepon"/>

    <View
        android:id="@+id/line5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/tvNoTelp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:text="Password"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/line5"
        android:layout_marginTop="15dp"/>


    <View
        android:id="@+id/line6"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/Password"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="31dp"
        android:background="#C7C7C7" />


    <TextView
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="20dp"
        android:text="Log Out"
        android:fontFamily="@font/montserrat"
        android:layout_below="@id/line6"
        android:textColor="#FA7373"
        android:layout_marginTop="20dp"/>
</RelativeLayout>